#!/bin/sh

source ~/.config/barconf

# time to stay up
panelduration=3

# dynamic geometries
panelw=${panelw:-200}
panelh=${panelh:-30}
panelx=${panelx:-1116}
panely=${panely:-20}

args="-f $glyphs -f $font -F #$fg -B #$bg -u 3 -g ${panelw}x${panelh}+${panelx}+${panely}"

# Create the popup and make it live for 3 seconds
(echo "%{c}$@"; sleep ${panelduration}) | \
    lemonbar ${args} | sh &
